<%= simple_form_for([listing, booking]) do |f| %>
  <%= f.input :start_date,
              as: :string,
              label: "Specify the booking duration",
              input_html: { data: {controller: "datepicker", datepicker_current_bookings_value: @listing.booked_dates} }  %>
  <%= f.button :submit, "Book Now" %>
<% end %>
