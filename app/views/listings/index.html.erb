<div class="container mt-4">
  <h1 class="mt-4 mb-4"><strong>My Dashboard</strong></h1>
  <p class="text-muted">You can view your listings own listings here.</p>
  <hr>
  <h2 class="my-4"><strong>My Listings</strong>
  <br>

  <% if @listings.any? %>
    <% @listings.each do |listing| %>
      <%= link_to listing_path(listing), class: "nested-card-link"  do %>
        <div class="card my-3 border-primary border-2 rounded d-flex justify-content-around align-items-center">
          <div class="display-photo my-2">
            <% if listing.photos.attached? %>
              <div id="carousel" class="carousel slide">
                <div class="carousel-inner">
                <% listing.photos.each_with_index do |photo, i| %>
                  <div class="carousel-item <%= "active" if i == 0 %>">
                    <%= cl_image_tag photo.key, class: "img-fluid rounded", style: "height: 250px; width: 400px;", crop: :fill %>
                  </div>
                  <% end %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
                </button>
              </div>
            <% else %>
              <%= image_tag "https://image.pollinations.ai/prompt/lens+for+camera+#{listing.lens.model.gsub(' ', '+')}", class: "img-fluid rounded", style: "max-height: 250px;" %>
            <% end %>
          </div>

          <div class="mt-2 ms-2">
            <h4 class="mb-1 fw-bold">
              <%= listing.lens.brand %><br>
              <%= listing.lens.model %></h4>
            <h3 class="text-muted mb-1">Â¥<%= listing.daily_rate %> per day</h3>
            <h3 class="card-text"><%= truncate(listing.owner_description, length: 80, separator: ' ') %></h3>
          </div>

          <% bookings = listing.bookings.where("start_date >= ?", Date.today) %>
          <% if bookings.any? %>
            <div class="bookings-info my-4">
              <h5>Upcoming bookings to this listing</h5>
              <ul>
                <% bookings.each do |booking| %>
                  <li class="my-3">
                    <p><%= booking.user.user_name %></p>
                    <p><%= booking.start_date %> ~ <%= booking.end_date %></p>
                    <p><%= booking.status.capitalize %></p>
                  </li>
                  <hr>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p class="text-muted mt-4">No listings found.</p>
  <% end %>
</div>
