<div class="container mt-4">
  <h1 class="mb-4">Listings for <strong><%= @lens.brand %></strong>: <%= @lens.model %></h1>
  
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @listings.each do |listing| %>
      <div class="col">
        <div class="card h-100 rounded">
          <%= image_tag "https://image.pollinations.ai/prompt/lens+for+camera+#{listing.lens.model.gsub(' ', '+')}", 
              class: "card-img-top", 
              style: "height: 180px; object-fit: contain; background-color: #f8f9fa;" %>
          <div class="card-body">
            <h5 class="card-title">Â¥<%= listing.daily_rate %> per day</h5>
            <p class="card-text"><%= truncate(listing.owner_description, length: 80, separator: ' ') %></p>
            <%= link_to "View Listing", listing_path(listing), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-4">
    <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
  </div>
</div>
