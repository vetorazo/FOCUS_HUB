<div class="container mt-4 listings-container">
  <h1 class="mb-4"><strong>About <%= @lens.model %> </strong></h1>
  <h2 class="mb-1"><strong>Description</strong></h2>
  <p><%= @lens.description %></p>

  <hr>
  <h2 class="mt-4 mb-4"><strong>Listings for: <%= @lens.model %></strong></h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @listings.each do |listing| %>
      <div class="col">
        <div class="card h-100 border-primary border-2 rounded">
          <%= image_tag "https://image.pollinations.ai/prompt/lens+for+camera+#{listing.lens.model.gsub(' ', '+')}",
              class: "card-img-top py-3",
              style: "height: 180px; object-fit: contain; background-color: #f8f9fa;" %>
          <div class="card-body mt-2 ms-2">
            <h5 class="card-title">Â¥<%= listing.daily_rate %> per day</h5>
            <p class="card-text"><%= truncate(listing.owner_description, length: 80, separator: ' ') %></p>

            <div class="d-flex justify-content-center align-items-center mt-2">
              <%= link_to "Details", listing_path(listing), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# <div class="mt-4"> %>
    <%# <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
  <%# </div> %>
</div>
