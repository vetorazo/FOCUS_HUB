<div class="container mt-4">
  <h1 class="mt-4 mb-4"><strong>My Dashboard</strong></h1>
  <p class="text-muted">You can view your listings own listings here.</p>
  <hr>
  <h2 class="my-4"><strong>My Listings</strong>
  <br>

  <% if @listings.any? %>
    <% @listings.each do |listing| %>
      <%= link_to listing_path(listing), class: "nested-card-link text-decoration-none"  do %>
        <div class="card my-4 shadow-sm border-0 rounded-3 hover-shadow card-fixed-height">
          <div class="row g-0 h-100">
            <div class="col-md-4 h-100">
              <div class="image-container h-100">
                <% if listing.photos.attached? %>
                  <div id="carousel-<%= listing.id %>" class="carousel slide h-100">
                    <div class="carousel-inner h-100">
                      <% listing.photos.each_with_index do |photo, i| %>
                        <div class="carousel-item <%= "active" if i == 0 %> h-100">
                          <%= cl_image_tag photo.key, class: "card-image", crop: :fill %>
                        </div>
                      <% end %>
                    </div>
                    <% if listing.photos.count > 1 %>
                      <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= listing.id %>" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                      </button>
                      <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= listing.id %>" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                      </button>
                    <% end %>
                  </div>
                <% else %>
                  <%= image_tag "https://image.pollinations.ai/prompt/lens+for+camera+#{listing.lens.model.gsub(' ', '+')}", class: "card-image" %>
                <% end %>
              </div>
            </div>

            <div class="col-md-8 h-100">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <div>
                    <h4 class="card-title fw-bold text-dark mb-1">
                      <%= listing.lens.brand %>
                    </h4>
                    <h5 class="text-muted mb-2"><%= listing.lens.model %></h5>
                  </div>
                  <span class="badge bg-primary fs-6 px-3 py-2">Â¥<%= listing.daily_rate %>/day</span>
                </div>
                
                <p class="card-text text-muted mb-3">
                  <%= truncate(listing.owner_description, length: 120, separator: ' ') %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p class="text-muted mt-4">No listings found.</p>
  <% end %>
</div>
