  <% if @listings.any? %>
    <div class="row row g-4 flex-column">
      <% @listings.each do |listing| %>
        <div class="col">
          <div class="card h-100 border-primary border-2 rounded">
            <%= image_tag "https://image.pollinations.ai/prompt/lens+for+camera+#{listing.lens.model.gsub(' ', '+')}",
                class: "card-img-top py-3",
                style: "height: 180px; object-fit: contain; background-color: #f8f9fa;" %>
            <div class="card-body mt-2 ms-2">
              <h4 class="card-title mb-1 fw-bold">
                <%= listing.lens.brand %><br>
                <%= listing.lens.model %></h4>
              <h3 class="text-muted mb-1">Â¥<%= listing.daily_rate %> per day</h3>
              <h3 class="card-text"><%= truncate(listing.owner_description, length: 80, separator: ' ') %></h3>

              <div class="d-flex justify-content-center align-items-center mt-2">
                <%= link_to "View Listing", listing_path(listing), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted mt-4">No listings found.</p>
  <% end %>
